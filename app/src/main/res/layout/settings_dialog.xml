<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/clock_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Snooze Timer"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/snooze1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/snooze1_ring"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/snooze1_ring"
                android:layout_weight="5"
                android:allowUndo="false"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="1" />

            <Button
                android:id="@+id/snooze1_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:layout_weight="10"
                android:text="Ring" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Snooze Timer 2"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/snooze2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snooze1_ring"
                android:layout_alignBottom="@+id/snooze2_ring"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/snooze2_ring"
                android:layout_weight="5"
                android:ems="10"
                android:inputType="numberSigned"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                android:text="1" />

            <Button
                android:id="@+id/snooze3_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snooze2_ring"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_weight="10"
                android:text="Ring" />
        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:singleLine="true"
                android:text="Snooze Timer 3"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/snooze3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/snooze3_ring"
                android:layout_toStartOf="@+id/snooze3_ring"
                android:layout_weight="5"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="1" />

            <Button
                android:id="@+id/snooze2_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snooze1_ring"
                android:layout_alignParentEnd="true"
                android:layout_weight="10"
                android:text="Ring" />
        </LinearLayout>

    <Button
            android:id="@+id/dismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Continue" />

    </LinearLayout>
